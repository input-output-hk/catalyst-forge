VERSION 0.8

deps:
    FROM golang:1.23.0-alpine3.19

    WORKDIR /work/cli

    RUN apk add git file

    RUN mkdir -p /go/cache && mkdir -p /go/modcache
    ENV GOCACHE=/go/cache
    ENV GOMODCACHE=/go/modcache
    CACHE --persist --sharing shared /go

    COPY ../../blueprint+src/src /blueprint
    COPY ../../tools+src/src /tools

    COPY go.mod go.sum .
    RUN go mod download

src:
    FROM +deps

    CACHE --persist --sharing shared /go

    COPY --dir cmd internal pkg .
    RUN go generate ./...

check:
    FROM +src

    RUN gofmt -l . | grep . && exit 1 || exit 0
    RUN go vet ./...

build:
    FROM +src

    ARG GOOS
    ARG GOARCH
    ARG VERSION="0.0.0"

    ENV CGO_ENABLED=0
    RUN go build -ldflags="-extldflags=-static -X main.version=$VERSION" -o bin/forge cmd/main.go
    RUN file bin/forge

    SAVE ARTIFACT bin/forge forge

test:
    FROM +build

    RUN go test ./...

release:
    FROM alpine:3.19

    ARG TARGETOS
    ARG TARGETARCH
    ARG USERPLATFORM
    ARG VERSION="0.0.2"

    COPY \
        --platform=$USERPLATFORM \
        (+build/forge \
        --GOOS=$TARGETOS \
        --GOARCH=$TARGETARCH \
        --VERSION=$VERSION) bin/forge

    SAVE ARTIFACT bin/forge forge

publish:
    FROM debian:bookworm-slim
    WORKDIR /workspace

    ARG tag=latest

    ARG TARGETOS
    ARG TARGETARCH
    ARG USERPLATFORM
    ARG VERSION="0.0.2"

    COPY \
        --platform=$USERPLATFORM \
        (+build/forge \
        --GOOS=$TARGETOS \
        --GOARCH=$TARGETARCH \
        --VERSION=$VERSION) /usr/local/bin/forge

    ENTRYPOINT ["/usr/local/bin/forge"]
    SAVE IMAGE forge:${tag}